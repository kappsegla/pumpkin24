<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="BOTTOM_RIGHT" spacing="20.0"
      xmlns="http://javafx.com/javafx/23"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.pumpkin.HelloController">
    <padding>
        <Insets bottom="40.0" left="20.0" right="40.0" top="40.0" />
    </padding>
   <BorderPane prefHeight="200.0" prefWidth="200.0">
      <top>
         <Button fx:id="topButton" onMouseEntered="#topButtonMouseEnter" onMouseExited="#topButtonMouseLeave" text="Button" BorderPane.alignment="CENTER" />
      </top>
      <left>
         <Button onMouseEntered="#topButtonMouseEnter" mnemonicParsing="false" text="Button" BorderPane.alignment="CENTER" />
      </left>
      <right>
         <Button mnemonicParsing="false" text="Button" BorderPane.alignment="CENTER" />
      </right>
      <center>
         <CheckBox mnemonicParsing="false" text="CheckBox" BorderPane.alignment="CENTER" />
      </center>
   </BorderPane>

    <Label fx:id="welcomeText" />
    <TextField />
    <Button onAction="#onHelloButtonClick" text="Hello!" />
</VBox>
